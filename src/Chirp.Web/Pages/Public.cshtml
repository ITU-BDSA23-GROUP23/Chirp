@page "/"
@using Chirp.Core
@using Chirp.Web.Pages.Shared
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    if (HttpMethods.IsPost(Request.Method))
    {
        var follow = Request.Form["follow"];
        var unfollow = Request.Form["unfollow"];

        await Model.FollowAuthor(@User.Identity.Name, follow);
        await Model.UnfollowAuthor(@User.Identity.Name, unfollow);
    }
}

<div>
    <div style="display: flex;justify-content: space-between;">
        <h2> Public Timeline </h2>
        @(await Html.PartialAsync("Shared/PageNav", @Model.PageNav))
    </div>


    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.TimeStamp</small>
                         @* Add follow and Unfollow buttons to the cheeps *@
                        @if (User.Identity.IsAuthenticated && cheep.AuthorName != User.Identity.Name)
                        {
                            @if (Model.IsFollowingAuthor(cheep))
                            {
                                <form method="post">
                                    <input type="hidden" name="unfollow" value="@cheep.AuthorName" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" onclick=@Model.UnfollowAuthor(User.Identity.Name, cheep.AuthorName)>Unfollow</button>
                                </form>
                            }
                            else
                            {
                                <form method="post">
                                    <input type="hidden" name="follow" value="@cheep.AuthorName" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" onclick=@Model.FollowAuthor(User.Identity.Name, cheep.AuthorName) >Follow</button>
                                </form>
                            }
                        }
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
    <em>There are no cheeps so far.</em>
    }

    @(await Html.PartialAsync("Shared/PageNav", @Model.PageNav))
</div>
