@page "/"
@using Chirp.Core
@using Chirp.Web.Pages.Shared
@using System.Security.Claims
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    if (HttpMethods.IsPost(Request.Method))
    {
        string AuthorName = Request.Form["Follow"];
        Model.FollowAuthor(@User.Identity.Name, AuthorName);
    }
}

<div>
    <div style="display: flex;justify-content: space-between;">
        <h2> Public Timeline </h2>
        @(await Html.PartialAsync("Shared/PageNav", @Model.PageNav))
    </div> 


    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.TimeStamp</small>
                        @* Add follow and Unfollow buttons to the cheeps *@
                        @if (User.Identity.IsAuthenticated && cheep.AuthorName != User.Identity.Name)
                        {
                            <form method="post">
                                @Html.AntiForgeryToken()
                                <input hidden type="text" name="Unfollow" value=@cheep.AuthorName/>
                                <input type="submit" value="Unfollow" class/>
                            </form>
                            <form  method="post" >
                                @Html.AntiForgeryToken()
                                <input hidden type="text" name="Follow" value="@cheep.AuthorName"/>
                                <input type="submit" name="submit" value="Follow" class="submit"/>
                            </form>

                        }
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    @(await Html.PartialAsync("Shared/PageNav", @Model.PageNav))
</div>
