@page "/"
@using Chirp.Core
@using Chirp.Web.Pages.Shared
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    if (HttpMethods.IsPost(Request.Method))
    {
        var follow = Request.Form["follow"];
        var unfollow = Request.Form["unfollow"];

        await Model.FollowAuthor(follow, User.Identity.Name);
        await Model.UnfollowAuthor(unfollow, User.Identity.Name);
    }
}

<div>
    <div style="display: flex;justify-content: space-between;">
        <h2> Public Timeline </h2>
        @(await Html.PartialAsync("Shared/PageNav", @Model.PageNav))
    </div>


    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.TimeStamp</small>
                    <form id="followForm_@cheep.AuthorName" asp-page-handler="FollowAuthor"
                        asp-route-followerName="@User.Identity.Name" asp-route-followingName="@cheep.AuthorName">
                        <button type="button" class="btn btn-primary follow-button"
                            onclick="submitForm('followForm_@cheep.AuthorName')">Follow</button>


                    </form>

                    <form id="unfollowForm_@cheep.AuthorName" asp-page-handler="UnfollowAuthor"
                        asp-route-followerName="@User.Identity.Name" asp-route-followingName="@cheep.AuthorName">
                        <button type="button" class="btn btn-danger unfollow-button"
                            onclick="submitForm('unfollowForm_@cheep.AuthorName')">Unfollow</button>
                    </form>
                    </p>
                </li>
            }
        </ul>
    }

    @section scripts {
        <script>
            function submitForm(formId) {
                console.log('Form submitted:', formId);

                var form = document.getElementById(formId);
                if (!form) {
                    console.error('Form not found:', formId);
                    return;
                }

                var formData = new FormData(form);
                fetch(form.action, {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        console.log('Form submitted successfully');
                        // Handle the response as needed
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            }
        </script>
    }




    else
    {
    <em>There are no cheeps so far.</em>
    }

    @(await Html.PartialAsync("Shared/PageNav", @Model.PageNav))
</div>
