@page "/PageInfo"
@using Chirp.Core
@using System.Security.Claims
@model Chirp.Web.Pages.PageInfoModel

@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<!--Name and email-->
<h2>@Model.Author?.Name</h2>
<h3>@Model.Author?.Email</h3>

<!--display followers and following count-->
<div>
    @if (Model.Author != null)
    {
        <a>Following: @(Model.FollowingCount(Model.Author.Name))</a>
        <a>Followers: @(Model.FollowersCount(Model.Author.Name))</a>
    }
</div>

<!--display followers and following-->
<div class="followers">
    <h3>Followers</h3>
    <ul>
        @foreach (var follower in Model.Followers)
        {
            <li>
                <a href="/@follower.Name">@follower.Name</a>
            </li>
        }
    </ul>
</div>
<div class="following">
    <h3>Following</h3>
    <ul>
        @foreach (var following in Model.Following)
        {
            <li>
                <a href="/@following.Name">@following.Name</a>
            </li>
        }
    </ul>
</div>

<!--display cheeps for the user-->
<div class="cheeps">
    <h3>My Cheeps</h3>
    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
