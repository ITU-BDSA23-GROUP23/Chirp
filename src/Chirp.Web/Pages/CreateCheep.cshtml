@using Chirp.Core
@using System.Security.Claims
@model Chirp.Web.Pages.CreateCheepModel


@{
  if (HttpMethods.IsPost(@Context.Request.Method))
  {
    string Cheep = @Context.Request.Form["Cheep"];

    Model.createCheep(@Context.User.Identity?.Name, Cheep);
    @Context.Response.Redirect("/");




  }}


<!DOCTYPE html>
<html>
    <head>
        <title>Customer Form</title>
    </head>
    <body>
      <form method="post">
        @Html.AntiForgeryToken()
        <fieldset>
          <legend style="margin: 0 auto;">Make a Cheep</legend>
          <div style="text-align: center;">
            <textarea type="text" name="Cheep" value="" maxlength="140"  rows="5" cols="40" size="30%" style="height: 30px; overflow-wrap: break-word;" placeholder="Cheep here!"></textarea>
            <div>
              <label>&nbsp;</label> 
            </div>
            <input type="submit" value="Submit" class="submit" style="height: 50px; width: 75px;"/>
          </div>
          <div>
            <label>&nbsp;</label>
          </div>
        </fieldset>
      </form>
    </body>
</html>



